# Weather-Dome Configuration

# API Keys (optional - NWS is free with no key)
OWM_API_KEY=your_openweathermap_key_here
VISUAL_CROSSING_API_KEY=your_visual_crossing_key_here

# Database
DATABASE_URL=sqlite:///./weather_dome.db

# Scheduler intervals (minutes)
WEATHER_INGEST_INTERVAL=15
IMPACT_COMPUTE_INTERVAL=30

# Dashboard polling interval (seconds)
DASHBOARD_POLL_INTERVAL=60

# Wind thresholds (mph)
WIND_ADVISORY_THRESHOLD=35.0
WIND_WARNING_THRESHOLD=58.0
WIND_EXTREME_THRESHOLD=74.0

# Ice thresholds (inches)
ICE_ADVISORY_THRESHOLD=0.1
ICE_WARNING_THRESHOLD=0.25
ICE_EXTREME_THRESHOLD=0.5

# Temperature thresholds (F)
HEAT_ADVISORY_THRESHOLD=95.0
COLD_ADVISORY_THRESHOLD=10.0

# Load capacity (MW)
CONED_PEAK_CAPACITY_MW=13400.0
OR_PEAK_CAPACITY_MW=1300.0

# NYC Open Data 311 outage complaints
NYC311_API_URL=https://data.cityofnewyork.us/resource/erm2-nwe9.json
NYC_OPENDATA_APP_TOKEN=
OUTAGE_INGEST_INTERVAL=10

# ConEd Outage Map
CONED_OUTAGE_MAP_URL=https://outagemap.coned.com/resources/data/external/interval_generation_data

# PowerOutage.us (optional API key; scrapes public page if no key)
POWEROUTAGE_US_API_KEY=
POWEROUTAGE_US_API_URL=

# Underground melt risk thresholds
MELT_RISK_FREEZING_POINT_F=32.0
MELT_RISK_WARM_THRESHOLD_F=40.0
MELT_RISK_RAPID_WARMING_RATE_F_PER_HR=3.0

# Snow depth override (inches) â€” set when weather APIs underreport snowpack.
# NWS NYC stations don't report snowDepth. Set to 0 to use automatic estimation.
SNOW_DEPTH_OVERRIDE_IN=0.0

# CORS origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
